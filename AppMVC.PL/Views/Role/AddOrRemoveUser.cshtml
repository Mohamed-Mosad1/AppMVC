@model List<UserInRoleViewModel>

@{
    ViewData["Title"] = "AddOrRemoveUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Role</h1>

<form asp-action="Edit">

    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-group">
            <input asp-for="@Model[i].IsSelected" />
            <label asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
        </div>

    }

    <input type="submit" value="Update" class="btn btn-success" />

    <a asp-action="Edit" class="btn btn-light">Cancel</a>
</form>


@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}

