@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>
<br />
<br />

<a asp-action="Create" class="btn btn-primary">Create New Role</a>

<br />

<div class="row justify-content-center align-items-center my-5">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" id="searchInput" name="searchInput" placeholder="Search By Name" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
    </form>
</div>

@if (Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover mt-4">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(D => D.Id)</th>
                    <th>@Html.DisplayNameFor(D => D.RoleName)</th>
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.RoleName</td>

                        <partial name="_ButtonPartilal" model="@user.Id" />

                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>There is No Roles :(</h4>
    </div>
}

