@model Department
@{
    ViewData["Title"] = "Delete Department";
}

<h1>Are You Sure to Delete this Department</h1>

<form asp-action="Delete" asp-controller="Department" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input asp-for="DateOfCreation" class="form-control" />
    </div>

    <input type="submit" value="Delete" class="btn btn-danger" />

    <a asp-controller="Department" asp-action="Index" class="btn btn-light">Cancel</a>

</form>