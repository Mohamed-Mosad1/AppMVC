@model DepartmentViewModel
@{
    ViewData["Title"] = "Edit Department";
}

<h1>Edit Department</h1>

<form asp-action="Edit" asp-controller="Department" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    <partial name="PartialViews/CreateEditDepartmentPartial" />

    <input type="submit" value="Save" class="btn btn-primary" />

    <a asp-controller="Department" asp-action="Index" class="btn btn-light">Cancel</a>
</form>

@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}