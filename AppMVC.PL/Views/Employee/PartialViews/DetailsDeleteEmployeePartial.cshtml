@model EmployeeViewModel

@inject IUnitOfWork _unitOfWork


@{
    var department = new SelectList(await _unitOfWork.Repository<Department>().GetAllAsync(), nameof(Department.Id), nameof(Department.Name));
}

<div>
    <img src="~/files/images/@Model.ImageName" class="img-fluid rounded-circle" alt="Employee Image"/>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input asp-for="Name" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input asp-for="Age" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input asp-for="Address" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input asp-for="Salary" class="form-control" readonly />
</div>
<div class="form-group d-flex font-weight-bold">
    <label class="form-check px-3" asp-for="IsActive"></label>
    <input class="form-check" asp-for="IsActive" readonly>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="EmailAddress"></label>
    <input asp-for="EmailAddress" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Gender"></label>
    <input asp-for="Gender" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="HiringDate"></label>
    <input asp-for="HiringDate" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="DepartmentId"></label>
    <select class="form-control" asp-for="DepartmentId" asp-items="@department" disabled>
        <option value="@null"> -- Select Department -- </option>
    </select>
</div>