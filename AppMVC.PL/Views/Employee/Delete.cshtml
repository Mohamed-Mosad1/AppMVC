@model EmployeeViewModel
@{
    ViewData["Title"] = "Delete Employee";
}

<h1>Are You Sure to Delete this Employee</h1>

<form asp-action="Delete" asp-controller="Employee" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <partial name="PartialViews/DetailsDeleteEmployeePartial" />

    <input type="submit" value="Delete" class="btn btn-danger" />

    <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Cancel</a>

</form>